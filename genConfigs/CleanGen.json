{
    "target_dataset":{
        "name": "webqa",
        "dev_rate": 0.1,
        "frequency":false
    },
    "poison_dataset":{
        "name": "webqa",
        "dev_rate": 0.1,
        "frequency":false
    },
    "victim":{
        "type": "casual",
        "model": "llama",
        "path": "Llama-2-7b-chat-hf",
        "device": "gpu",
        "max_len": 1024,
        "muscleConfig":{
            "muscle":true,
            "lora":true,
            "loraConfig": {
                "lora_alpha": 8,
                "lora_dropout": 0.0,
                "r": 4
            },
            "mslr":false
        }
    },
    "attacker":{
        "name": "base",
        "metrics": ["emr", "kmr"],
        "train":{
            "name": "casualcleangen",
            "lr": 2e-5,
            "k": 4, 
            "alpha":20, 
            "backLen":0,
            "forwardLen":1,
            "maxLength":64,
            "weight_decay": 0,
            "max_grad_norm":1.0,
            "epochs": 3,
            "batch_size": 4,
            "warm_up_epochs": 0,
            "gradient_accumulation_steps":1,
            "ckpt": "best",
            "defense":true,
            "save_path": "./models",
            "attackMethod":"generativebadnets"
        },
        "poisoner":{
            "name": "cba",
            "poisonComponents":["instruction", "question"],
            "poison_rate": 0.1,
            "negativeRatio":1.0,
            "targetReplaced":false,
            "load": true,
            "save":false,
            "triggers": ["consider", "done"],
            "targetOutput": ", and click <malicious_url> for more information",
            "label_consistency": false,
            "label_dirty": false,
            "target_label":-1
        }
    },
    "clean-tune": false
}
